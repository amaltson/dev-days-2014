<header class="site-header">
  <nav class="site-nav">
    <a class="site-logo" href="/"></a>
    <div class="search-bar">
      <span class="icon-magnifying-glass"></span><input type="search" class="search-input" />
    </div>
  </nav>
</header>

<main class="container" ui-view="service" ng-controller="ServiceCtrl as serviceCtrl">
 <!-- custom directive for service header info -->
 <service-header service="serviceCtrl"></service-header>
  <section class="service-section">
    <h2 class="service-section-title">Deployment Plans</h2>
    <div>
      <div class="deployment-plan">
        <h5>wasdev1-snapshot</h5>
        <a class="bamboo-link" href="#"><span class="icon-bamboo-logo"></span>Bamboo</a>
        <button class="btn btn-success">Deploy</button>
      </div>
      <div class="deployment-plan">
        <h5>wasdev1-released</h5>
        <a class="bamboo-link" href="#"><span class="icon-bamboo-logo"></span>Bamboo</a>
        <button class="btn btn-success">Deploy</button>
      </div>
    </div>
  </section>
  <section class="service-section" >
    <h2 class="service-section-title">Instances</h2>
    <div class="instance" ng-repeat="instance in serviceCtrl.instancesData">
      <div class="instance-title-bar">
        <b>{{instance.name}}</b>
        <span class="pull-right"><b>{{instance.version_of_artifact}}</b></span>
      </div>
      <table>
        <tbody>
          <tr ng-repeat="endpoint in serviceCtrl.endpointsData[$index]">
            <td>{{endpoint.name}}</td>
            <td>{{endpoint.endpoint_type}}</td>
            <td>
              <a ng-href="{{endpoint.url}}"><span class="icon-anchor-link"></span>Address</a>
            </td>
            <td>{{endpoint.description}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</main>
