<header class="site-header">
  <nav class="site-nav">
    <a class="site-logo" href="/"></a>
    <div class="search-bar">
      <span class="icon-magnifying-glass"></span><input type="search" class="search-input" />
    </div>
  </nav>
</header>

<main class="container" ui-view="service" ng-controller="ServiceCtrl as serviceCtrl">
  <header class="row service-header">
    <div class="col-xs-6">
      <span class="service-group">{{serviceCtrl.serviceData.group}}</span>
      <h1 class="service-title">{{serviceCtrl.serviceData.name}}</h1>
    </div><!-- Setting display to inline-block makes inter-element spaces break grid - use comments to erase spaces between elements
   --><div class="col-xs-3">
      <a ng-href="{{serviceCtrl.serviceData.confluence}}" class="header-link">
        <span class="icon-confluence-logo"></span> Docs <span>1</span>
      </a>
      <a href="#" class="header-link">
        <span class="icon-github-logo"></span> Source <span class="caret"></span> <span>4</span>
      </a>
      <ul class="list-group source-dropdown">
          <li class="list-group-item"><a href="#">com.otpp.ws.commutedValue</a></li>
          <li class="list-group-item"><a href="#">com.otpp.domain.commutedvalue</a></li>
          <li class="list-group-item"><a href="#">benefit-dev-props</a></li>
          <li class="list-group-item"><a href="#">commutedvalue-prod-properties </a></li>
      </ul>
    </div><!--
   --><div class="col-xs-3">
      <div class="service-admin">
        <%= image_tag "liam-neeson.png" %>
        <span>Liam Neeson</span>
      </div>
      <div class="service-admin">
        <%= image_tag "russell-brand.png" %>
        <span>Russell Brand</span>
      </div>
    </div>
  </header>
  <section class="service-section">
    <h2 class="service-section-title">Deployment Plans</h2>
    <div>
      <div class="deployment-plan">
        <h5>wasdev1-snapshot</h5>
        <a class="bamboo-link" href="#"><span class="icon-bamboo-logo"></span>Bamboo</a>
        <button class="btn btn-success">Deploy</button>
      </div>
      <div class="deployment-plan">
        <h5>wasdev1-released</h5>
        <a class="bamboo-link" href="#"><span class="icon-bamboo-logo"></span>Bamboo</a>
        <button class="btn btn-success">Deploy</button>
      </div>
    </div>
  </section>
  <section class="service-section" >
    <h2 class="service-section-title">Instances</h2>
    <div class="instance" ng-repeat="instance in serviceCtrl.instancesData">
      <div class="instance-title-bar">
        <b>{{instance.name}}</b>
        <span class="pull-right"><b>{{instance.version_of_artifact}}</b></span>
      </div>
      <table>
        <tbody>
          <tr ng-repeat="endpoint in serviceCtrl.endpointsData[$index]">
            <td>{{endpoint.name}}</td>
            <td>{{endpoint.endpoint_type}}</td>
            <td>
              <a ng-href="{{endpoint.url}}"><span class="icon-anchor-link"></span>Address</a>
            </td>
            <td>{{endpoint.description}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</main>
